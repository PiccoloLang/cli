const encryptionKey = 4

const apply = fn msg, shift, key -> {
    var result = ''
    for char in msg {
        var shiftedChar = char
        if shiftedChar in shift
            for i in 0..key
                shiftedChar = shift[shiftedChar]
        result = result + shiftedChar
    }
    result
}

var currShift = shiftFwd
var cont = true
while cont {
    const input = io.input()
    if input == '!quit'
        cont = false
    else if input == '!enc'
        currShift = shiftFwd
    else if input == '!dec'
        currShift = shiftBwd
    else
        io.print(apply(input, currShift, encryptionKey))
}