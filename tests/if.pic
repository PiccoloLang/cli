
import 'io' as io
import 'debug' as debug

io.print('IFS TESTS')
io.print('=========')

# basic

if true
    debug.assert(true)

if false
    debug.assert(false)

if true
    debug.assert(true)
else
    debug.assert(false)

if false
    debug.assert(false)
else
    debug.assert(true)

# evaluation

debug.assert(if true true else false)
debug.assert(3 == if 1 == 1 3 else 2)
debug.assert((if true 3) == (if false 2 else 3))

