
import 'io' as io
import 'debug' as debug

io.print('VARIABLE TESTS')
io.print('==============')

# declarations

var x = 5
var y = 6
var z = 7
debug.assert(x == 5)
debug.assert(y == 6)
debug.assert(z == 7)

{
    var hello = 33
    debug.assert(hello == 33)
    {
        var world = 54
        debug.assert(world == 54)
        debug.assert(hello == 33)

        hello = 99
    }
    debug.assert(hello == 99)
}

# assignments

debug.assert((x = 6) == 6)
debug.assert(x == 6)

# usage

var a = x * y + 2
debug.assert(a == 38)

debug.assert((a = a + 3) == 41)
debug.assert(a == 41)

io.print()